<mvc:View
    controllerName="com.inctue.customwebportal.controller.FAQ"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <!-- Floating FAQ Button -->
    <Button
        id="faqBtnUI5"
        text="FAQ"
        press=".onOpenFAQ"
        type="Emphasized"
        tooltip="FAQ"
        class="faqFloatingBtnCss"
    />

    <!-- FAQ Responsive Popover -->
    <ResponsivePopover
        id="faqPopover"
        title="Top FAQs"
        placement="Top"
        showHeader="true"
        class="sapUiContentPadding"
    >
        <content>
            <List items="{faqModel>/faqs}">
                <CustomListItem>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceBetween"
                        width="100%"
                    >
                        <Text
                            text="{faqModel>question}"
                            wrapping="true"
                        />
                        <Button
                            icon="sap-icon://navigation-right-arrow"
                            type="Transparent"
                        />
                    </HBox>
                </CustomListItem>
            </List>
        </content>
    </ResponsivePopover>
</mvc:View>
