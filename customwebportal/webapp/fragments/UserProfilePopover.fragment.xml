<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="userProfilePopover"
        placement="Bottom"
        showHeader="false"
    >
        <content>
            <VBox>
                <!-- Name and Email with padding -->
                <VBox class="sapUiNoMargin sapUiContentPadding sapUiNoMarginBegin">
                    <Text
                        text="John Doe"
                        class="sapMText"
                    />

                    <Text
                        text="john.doe@jnj.com"
                        class="sapMText"
                    />
                </VBox>

                <!-- Horizontal separator line covering full width -->
                <core:HTML
                    content="&lt;hr style='border: none; border-top: 1px solid #d9d9d9; margin: 4px 0; width: 100%;' /&gt;"
                />

                <!-- Build version with padding and styling -->
                <HBox
                    width="100%"
                    justifyContent="Center"
                    alignItems="Center"
                    class="sapUiTinyMarginBottom"
                >
                    <Text
                        text="Build Version: 1.0.3"
                        class="sapMTextSmall buildVersionText"
                        textAlign="Center"
                    />
                </HBox>
            </VBox>
        </content>
    </Popover>
</core:FragmentDefinition>